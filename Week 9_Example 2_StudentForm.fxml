<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.trycatchexample.StudentFormController" hgap="10" vgap="10">
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <TextField fx:id="courseField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Button text="Add Student" onAction="#handleAdd" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label text="Course:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
</GridPane>
